<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/custom_profile_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="14dp"
            android:src="@drawable/fata_profil" />

    </LinearLayout>


    <TextView
        android:id="@+id/custom_profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="46dp"
        android:text="Display Name"
        android:textAlignment="center"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/custom_user_last_seen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/custom_profile_name"
        android:layout_below="@+id/custom_profile_name"
        android:text="Last Seen"
        android:textAlignment="center"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="10sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/custom_call_button"
        android:layout_width="41dp"
        android:layout_height="41dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="21dp"
        android:background="@color/colorPrimary"
        app:srcCompat="@drawable/ic_call_btn_"
        android:onClick="Call"/>

    <ImageButton
        android:id="@+id/custom_video_button"
        android:layout_width="44dp"
        android:layout_height="41dp"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="0dp"
        android:layout_toStartOf="@+id/custom_call_button"
        android:background="@color/colorPrimary"
        app:srcCompat="@drawable/ic_video_call_btn"
        android:onClick="VideoCall"/>


</RelativeLayout>